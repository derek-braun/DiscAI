<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow>
                <TextView
                    android:text="Scorecard"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/dateText"
                    android:text="Date"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="40dp"/>
            </TableRow>
            <TableRow>
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="50dp">
                    <TableRow>
                        <TextView
                            android:id="@+id/hole1"
                            android:text="Hole 1: "
                            android:textSize="20dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/hole2"
                            android:text="Hole 2: "
                            android:textSize="20dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/hole3"
                            android:text="Hole 3: "
                            android:textSize="20dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/hole4"
                            android:text="Hole 4: "
                            android:textSize="20dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/hole5"
                            android:text="Hole 5: "
                            android:textSize="20dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/hole6"
                            android:text="Hole 6: "
                            android:textSize="20dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/hole7"
                            android:text="Hole 7: "
                            android:textSize="20dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/hole8"
                            android:text="Hole 8: "
                            android:textSize="20dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/hole9"
                            android:text="Hole 9: "
                            android:textSize="20dp"/>
                    </TableRow>
                    <TableRow android:layout_marginTop="50dp">
                        <TextView
                            android:id="@+id/front9"
                            android:text="Front 9: "
                            android:textSize="20dp"
                            android:textStyle="bold"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/back9"
                            android:text="Back 9: "
                            android:textSize="20dp"
                            android:textStyle="bold"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/total"
                            android:text="Total: "
                            android:textSize="20dp"
                            android:textStyle="bold"/>
                    </TableRow>
                </TableLayout>
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="-30dp">
                    <TableRow>
                        <TextView
                            android:id="@+id/hole10"
                            android:text="Hole 10: "
                            android:textSize="20dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/hole11"
                            android:text="Hole 11: "
                            android:textSize="20dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/hole12"
                            android:text="Hole 12: "
                            android:textSize="20dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/hole13"
                            android:text="Hole 13: "
                            android:textSize="20dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/hole14"
                            android:text="Hole 14: "
                            android:textSize="20dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/hole15"
                            android:text="Hole 15: "
                            android:textSize="20dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/hole16"
                            android:text="Hole 16: "
                            android:textSize="20dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/hole17"
                            android:text="Hole 17: "
                            android:textSize="20dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/hole18"
                            android:text="Hole 18: "
                            android:textSize="20dp"/>
                    </TableRow>
                </TableLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>